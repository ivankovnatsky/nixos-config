        config = {
          "${laptopIdentifier}" = {
            enable = true;
            crtc = 0;
            mode = "1920x1080";
            position = "0x0";
            primary = true;
            rate = "60.03";
          };

          "${monitorIdentifier}".enable = false;
        };

        hooks.postswitch = "xrandr --dpi 142";
